<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="account_manual_reconciliation_form">
        <field name="name">account_manual_reconciliation.form</field>
        <field name="model">account.manual.reconciliation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="reconcile" string="Reconcile" type="object"/>
                </header>
                    <group colspan="2">
                        <group string="Account Moves" colspan="1">
                            <field name="move_line_ids" nolabel="1"  readonly="1">
                                <tree editable="bottom">
                                    <button name="select_line" string="Select" type="object" icon="fa-plus"/>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="ref" optional="hide"/>
                                    <field name="note" optional="hide"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Statement Lines" colspan="1">
                            <field name="statement_line_ids" nolabel="1"  readonly="1">
                                <tree editable="bottom">
                                    <button name="select_line" string="Select" type="object" icon="fa-plus"/>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="ref" optional="hide"/>
                                    <field name="note" optional="hide"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                    <group class="col-12">
                        <group string="Selected Account Moves" class="col-6">
                            <field name="selected_move_line_ids" nolabel="1"  readonly="1">
                                <tree editable="bottom">
                                    <button name="select_line" string="Select" type="object" icon="fa-plus"/>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="ref" optional="hide"/>
                                    <field name="note" optional="hide"/>
                                    <field name="amount" sum="Total"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Selected Statement Lines" class="col-6">
                            <field name="selected_statement_line_ids" nolabel="1"  readonly="1">
                                <tree editable="bottom">
                                    <button name="select_line" string="Select" type="object" icon="fa-plus"/>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="ref" optional="hide"/>
                                    <field name="note" optional="hide"/>
                                    <field name="amount" sum="Total"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                    <group colspan="3">
                        <group colspan="1">
                            <field name="difference"/>
                        </group>
                        <group colspan="1">
                            <button name="reconcile" string="Reconcile" type="object"/>
                        </group>
                    </group>
            </form>
        </field>
    </record>
    <record id="action_account_manual_reconciliation" model="ir.actions.act_window">
        <field name="name">account.manual.reconciliation</field>
        <field name="res_model">account.manual.reconciliation</field>
        <field name="view_mode">form</field>
    </record>
</odoo>
